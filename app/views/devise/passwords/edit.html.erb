<h2>Change your password</h2>

<div class="row">
	<div class="span5">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), 
			:html => { :method => :put }, html: {class: "well"}) do |f| %>
			<%= devise_error_messages! %>
			
			<%= f.hidden_field :reset_password_token %>
		
			<%= f.input :password, "New password" %>
		
			<%= f.input :password_confirmation, "Confirm new password" %>
		
			<div><%= f.button :submit, "Change my password" %></div>
			
		<% end %>
		
		<%= render "devise/shared/links" %>
	</div>
	<div class="span7">
		<h2>We make it easy to change your password</h2>
	</div>
</div>
