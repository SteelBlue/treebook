<h2>Forgot your password?</h2>

<div class="row">
	<div class="span5">
		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), 
			:html => { :method => :post }, html: {class: "well"}) do |f| %>
			<%= devise_error_messages! %>
		
			<%= f.input :email %>
		
			<div><%= f.button :submit, "Send me reset password instructions" %></div>
		<% end %>
		
		<%= render "devise/shared/links" %>
	</div>
	<div class="span7">
		<h2>Don't worry if you forget your password</h2>
	</div>
</div>